enum Role {
  peternak
  admin
  pembeli
}

enum Menu {
  olah_pangan
  sulap_limbah
  edukasi
}

enum Hasil {
  SangatBaik
  Baik
  Normal
  Buruk
  SangatBuruk
}

model Users {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  password    String
  fullname    String
  sapi        Int?
  no_wa       String?
  rt          String?
  rw          String?
  id_kelompok Int
  kelompok    Kelompok    @relation(fields: [id_kelompok], references: [id])
  role        Role        @default(pembeli)
  artikels    Artikel[]
  pengujian   Pengujian[]
  deteksis    Deteksi[]
  warung      Warung[]
  sakit       Sakit[]
  cocoblog    Cocoblog[]
  created     DateTime    @default(now())
  updated     DateTime    @updatedAt
}

model Kelompok {
  id      Int      @id @default(autoincrement())
  nama    String
  user    Users[]
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Artikel {
  id        Int      @id @default(autoincrement())
  id_user   Int
  judul     String
  deskripsi String
  menu      Menu
  user      Users    @relation(fields: [id_user], references: [id])
  media     Media[]
  created   DateTime @default(now())
  updated   DateTime @updatedAt
}

model Pengujian {
  id      Int      @id @default(autoincrement())
  id_user Int
  fat     Float
  snf     Float
  protein Float
  ph      Float
  hasil   Hasil
  message String
  rating  Int
  user    Users    @relation(fields: [id_user], references: [id])
  created DateTime @default(now())
  updated DateTime @updatedAt
  Warung  Warung[]
}

model Deteksi {
  id      Int      @id @default(autoincrement())
  id_user Int
  cctv    String
  user    Users    @relation(fields: [id_user], references: [id])
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Media {
  id          Int       @id @default(autoincrement())
  id_artikel  Int?
  id_warung   Int?
  id_sakit    Int?
  id_klinik   Int?
  id_cocoblog Int?
  id_link     String
  link        String
  artikel     Artikel?  @relation(fields: [id_artikel], references: [id])
  warung      Warung?   @relation(fields: [id_warung], references: [id])
  sakit       Sakit?    @relation(fields: [id_sakit], references: [id])
  klinik      Klinik?   @relation(fields: [id_klinik], references: [id])
  cocoblog    Cocoblog? @relation(fields: [id_cocoblog], references: [id])
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
}

model Warung {
  id           Int       @id @default(autoincrement())
  id_user      Int
  id_pengujian Int
  nama         String
  harga        Int
  deskripsi    String
  kuantiti     String
  stok         Int
  user         Users     @relation(fields: [id_user], references: [id])
  pengujian    Pengujian @relation(fields: [id_pengujian], references: [id])
  Media        Media[]
  created      DateTime  @default(now())
  updated      DateTime  @updatedAt
}

model Sakit {
  id        Int      @id @default(autoincrement())
  id_user   Int
  id_lokasi Int
  penyakit  String
  saran     String
  bahaya    Int      @default(0)
  deskripsi String
  akurasi   Float
  created   DateTime @default(now())
  updated   DateTime @updatedAt

  media  Media[]
  user   Users   @relation(fields: [id_user], references: [id])
  lokasi Lokasi  @relation(fields: [id_lokasi], references: [id])
}

model Lokasi {
  id         Int     @id @default(autoincrement())
  longtitude Float
  latitude   Float
  sakit      Sakit[]

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Klinik {
  id        Int     @id @default(autoincrement())
  id_kota   Int
  id_jadwal Int
  nama      String
  alamat    String
  maps      String
  telepon   String
  media     Media[]

  kota    Kota     @relation(fields: [id_kota], references: [id])
  jadwal  Jadwal   @relation(fields: [id_jadwal], references: [id])
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Kota {
  id     Int      @id @default(autoincrement())
  nama   String
  klinik Klinik[]

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Jadwal {
  id         Int      @id @default(autoincrement())
  seninSabtu String
  minggu     String
  klinik     Klinik[]

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Cocoblog {
  id       Int    @id @default(autoincrement())
  id_admin Int
  judul    String
  isi      String @db.Text

  admin     Users    @relation(fields: [id_admin], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gambar    Media[]
}
